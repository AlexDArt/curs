=breadcrumb_tag do
  %li.active
    = @author.author_index
  %li
    = link_to 'Авторы', authors_path
  %li
    Библиотека

%h1= @author.author_index

%dl
  %dt= Author.human_attribute_name(:author_index)
  %dd= @author.author_index
  %dt= Author.human_attribute_name(:first_name)
  %dd= @author.first_name
  %dt= Author.human_attribute_name(:second_name)
  %dd= @author.second_name
  %dt= Author.human_attribute_name(:last_name)
  %dd= @author.last_name
  %h2 Книги
  %dd= @author.books.map{ |ru| ru.name }.join(', ')


