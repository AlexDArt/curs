.form-group
  .row
    .col-md-6
      = f.label :short_name
      = f.text_field :short_name, class: 'form-control'
      = f.error_messages_for(:short_name)
    .col-md-6
      = f.label :full_name
      = f.text_field :full_name, class: 'form-control'
      = f.error_messages_for(:full_name)
      = f.hidden_field :id ,class: 'form-control'
